{
    "name": "Matrix manipulator",
    "lang": "en-us",
    "short_name": "Matrix",
    "description": "A web program to edit matrix files for Q-Rex",
    "start_url": "./",
    "scope": "./",
    "display": "standalone",
    "display_override": ["tabbed"],
    "theme_color": "#1B3067",
    "background_color": "#FFFFFF",
    "orientation": "any",
    "icons": [
        {
            "src": "matrix-blue.png",
            "sizes": "256x256"
        },
        {
            "src": "matrix.ico",
            "sizes": "16x16 32x32 48x48 64x64 128x128 256x256"
        },
        {
            "src": "matrix-blue.ico",
            "sizes": "256x256"
        },
        {
            "src": "matrix.svg",
            "purpose": "maskable any",
            "sizes": "any"
        }
    ],
    "file_handlers": [
        {
            "action": "./",
            "accept": {
                "text/xml": [
                    ".matrix"
                ]
            }
        }
    ]
}