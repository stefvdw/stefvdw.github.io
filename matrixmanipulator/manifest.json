{
    "name": "Matrix manipulator",
    "lang": "en-us",
    "short_name": "Matrix",
    "description": "A web prograam to edit matrix files for Q-Rex",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "display_override": ["tabbed"],
    "theme_color": "#004D9F",
    "background_color": "#FFFFFF",
    "orientation": "any",
    "icons": [
        {
            "src": "matrix-blue.png",
            "sizes": "256x256"
        },
        {
            "src": "matrix.svg",
            "purpose": "maskable any",
            "sizes": "any"
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "text/xml": [
                    ".matrix"
                ]
            }
        }
    ]
}